


<!doctype html>
<html>
<head>
    <title>Workout Log - Profile</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1>Welcome to FIT FLOW: your Weekly Workout Log!</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <!-- Workout Form -->
    <h2>Add a Workout</h2>
    <form action="/profile/workouts" method="POST">
        <input type="text" name="title" placeholder="Workout Title" required>
        <input type="text" name="description" placeholder="Description">
        <select name="day" required>
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
        </select>
        <button type="submit" class="btn btn-primary">Add Workout</button>
    </form>

    <!-- Calendar View -->
   

    <h2>Your Weekly Workout Schedule</h2>
    <div class="calendar">
        <% const daysOfWeek = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]; %>
        <% daysOfWeek.forEach(day => { %>
            <div class="calendar-day">
                <h3><%= day %></h3>
                <% workouts.filter(workout => workout.day === day).forEach(workout => { %>
                    <div class="workout-item">
                        <h4><%= workout.title %></h4>
                        <p><%= workout.description %></p>
                        <% if (workout.completed) { %>
                            <span class="badge badge-success">Completed</span>
                        <% } else { %>
                            <button onclick="markCompleted('<%= workout._id %>')" class="btn btn-success">Mark Completed</button>
                        <% } %>
                        <button onclick="deleteWorkout('<%= workout._id %>')" class="btn btn-danger">Delete</button>
                    </div>
                <% }) %>
            </div>
        <% }) %>
    </div>
    









<script src="/js/main.js"></script>
</body>
</html>

